<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Other styles -->

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item> <!-- Adjust text size -->
        <item name="android:paddingTop">4dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item> <!-- Specify your custom font -->
        <item name="android:textColor">@color/tab_unselected_color</item> <!-- Default text color -->
    </style>

    <style name="CustomTabSelectedTextAppearance">
        <item name="android:textColor">@color/tab_selected_color</item> <!-- Selected text color -->
    </style>


    <style name="ratio">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="background">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CustomRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/feedback_text</item>
        <!-- Adjust other attributes as needed -->
    </style>

    <style name="FullHeightBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!-- Full-Screen BottomSheetDialog Theme -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <!-- Remove the top rounded corners -->
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <!-- Make the dialog fullscreen -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Style for the bottom sheet itself -->
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@null</item> <!-- Remove rounded corners -->
        <item name="android:layout_height">match_parent</item> <!-- Full height -->
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">85%</item> <!-- Adjust width as a percentage -->
        <item name="android:windowMinWidthMinor">85%</item>
    </style>
    <!--bottom sheet dialog -->

    <style name="SlideUpActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/SlideUpAnimation</item>
    </style>

    <style name="SlideUpAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_bottom</item>
    </style>






</resources>
