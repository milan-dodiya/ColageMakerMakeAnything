<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CollageMakerMakeAnything" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowTranslucentStatus">
            false
        </item>
        
        <item name="android:statusBarColor">
            @color/transparent
        </item>
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>

    </style>

    <!-- res/values/styles.xml -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">

        <item name="android:textSize">10sp</item>
     //   <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Custom style for SearchView text -->
    <style name="SearchViewTextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">10sp</item> <!-- Change this value to desired size -->
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@android:color/black</item> <!-- Optional: Change text color -->
    </style>

    <style name="Theme.CollageMakerMakeAnything" parent="Base.Theme.CollageMakerMakeAnything" />

    <style name="CustomTabTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@drawable/tabs_text_color_selector</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <item name="android:background">@drawable/tabs_background_selector</item>
        <item name="android:gravity">center</item>
    </style>



</resources>